---
/**
 * Componente para exibir páginas de erro
 * 
 * Usado para exibir erros 404, 500, etc.
 */

const {
  title = 'Página não encontrada',
  message = 'A página que você está procurando não existe ou foi removida.',
  statusCode = 404,
  buttonText = 'Voltar para a página inicial',
  buttonUrl = '/'
} = Astro.props;
---

<div class="error-page">
  <div class="error-content">
    <div class="error-code">{statusCode}</div>
    <h1>{title}</h1>
    <p class="error-message">{message}</p>
    <a href={buttonUrl} class="btn btn-primary">{buttonText}</a>
  </div>
</div>

<style>
  .error-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--spacing-xl) 0;
    min-height: 60vh;
  }
  
  .error-content {
    max-width: 600px;
  }
  
  .error-code {
    font-size: 6rem;
    font-weight: bold;
    color: var(--color-primary);
    line-height: 1;
    opacity: 0.5;
    margin-bottom: var(--spacing-md);
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
  }
  
  .error-message {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-lg);
    font-size: 1.1rem;
  }
</style>